
		state_name_type_closure("reseted","start") {
		  entry "resetTimer"
		  transitions {
			when_event_enter("start","running")
			when_event_enter("switchOff","off")
		  }
		};
	
		state_name_closure("running") {
		  entry "startTimer"
		  perform: "loopRunning" //do is a reserved keyword in Groovy
		  transitions {
			when_event_enter("split","paused")
			when_event_enter("stop","stopped")
		  }
		};
	
		state_name_closure("paused") {
		  entry "pauseTimer"
		  transitions {
			when_event_enter("unsplit","running")
			when_event_enter("stop","stopped")
		  }
		};
	
		state_name_closure("stopped") {
		  entry "stopTimer"
		  transitions {
			when_event_enter("reset","stopped")
			when_event_enter("switchOff","off")
		  }
		};
	
		state_name_closure("off") {
		  exit "switchOff"
		  transitions {
			when_enter("end")
		  }
		};